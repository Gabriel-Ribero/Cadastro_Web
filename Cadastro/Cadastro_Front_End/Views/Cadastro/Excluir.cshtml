@using Cadastro.Model;
@model PessoaModel
@{
    ViewData["Title"] = "Excluir Cadastro";
}

<div class="text-center">

    <h3> Realmente deseja excluir o cadastro (@Model.Nome)?</h3>

</div>

<div class="text-center">

    <a class="btn btn-primary" asp-action="Index" asp-controller="Cadastro" role="button">Cancelar exclusão</a>
    <a class="btn btn-danger" asp-action="Excluir" asp-controller="Cadastro" asp-route-id="@Model.Id" role="button">Confirmar exclusão</a>

</div>
